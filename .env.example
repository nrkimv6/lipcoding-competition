# 환경변수 예시 파일
# 실제 사용 시 .env로 복사하여 값들을 수정하세요

# 프로젝트 정보
PROJECT_NAME=MM Matching App
PROJECT_VERSION=1.0.0
ENVIRONMENT=production

# 데이터베이스
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=mm_matching
POSTGRES_HOST=your-db-host
POSTGRES_PORT=5432

# 네트워크 포트
FRONTEND_PORT=3000
BACKEND_PORT=8000
DB_PORT=5432

# Docker 설정용
COMPOSE_PROJECT_NAME=mm-matching

# 보안 키 (실제 운영 환경에서는 강력한 키로 변경)
SECRET_KEY=change-this-to-a-very-secure-secret-key
JWT_SECRET=change-this-to-a-very-secure-jwt-secret

# 외부 서비스 (선택사항)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# AWS (선택사항)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-2
S3_BUCKET=your-s3-bucket-name

# 모니터링 (선택사항)
SENTRY_DSN=your-sentry-dsn
GA_ID=your-google-analytics-id
